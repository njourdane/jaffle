{
  "name": "jaffle",
  "version": "0.1.0",
  "scripts": {
    "esbuild": "esbuild ./src/jaffle.ts --bundle --outfile=./public/jaffle.js --target=es2022",
    "copy": "mkdir -p ./public && cp ./website/* ./public && cp -r tunes/ public/ && cp images/jaffle_icon_32.png public/favicon.png",
    "build": "npm run copy && npm run esbuild",
    "start": "npm run copy && npm run esbuild -- --servedir=./public",
    "lint": "eslint src/*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "esbuild": "^0.18.4",
    "eslint": "^8.43.0",
    "eslint-config-airbnb": "^19.0.4"
  },
  "dependencies": {
    "@codemirror/language": "^6.8.0",
    "@codemirror/legacy-modes": "^6.3.2",
    "@codemirror/view": "^6.13.2",
    "@strudel.cycles/core": "^0.8.1",
    "@strudel.cycles/mini": "^0.8.1",
    "@strudel.cycles/soundfonts": "^0.8.1",
    "@strudel.cycles/tonal": "^0.8.1",
    "@strudel.cycles/webaudio": "^0.8.1",
    "@types/codemirror": "^5.60.8",
    "@types/js-yaml": "^4.0.5",
    "@uiw/codemirror-theme-solarized": "^4.21.3",
    "codemirror": "^6.0.1",
    "js-yaml": "^4.1.0"
  }
}
